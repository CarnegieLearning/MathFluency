<script type="text/javascript" language="javascript">
    window.FLUENCY.formData = <%- JSON.stringify(formData) %>;
</script>

<style type="text/css">
    dl.meta {
        background: #eee;
        border: solid 1px #666;
        padding: 10px;
    }
    dl.meta dt {
        float: left;
        width: 100px;
        font-weight: bold;
    }
    #error-messages {
        background: #fee;
        border: solid 3px #f00;
        display: none;
        padding: 10px;
    }
</style>

<h2>Roster Upload Confirmation</h2>

<div id="error-messages">
    <h3>Errors</h3>
    <ol>
    </ol>
</div>

<dl class="meta">
    <dt>File
    <dd><%= file %>
    <dt>Instructor
    <dd><%= assignInstructor.loginID %>
    <dt>Condition
    <dd><%= condition %>
</dl>

<table id="roster-upload-table">
    <thead>
        <tr>
            <th>Roster ID
            <th>First Name
            <th>Last Name
            <th>Login
            <th>Password
            <th>Condition
        </tr>
    </thead>
    <tbody>
        <% for (var i = 0; i < students.length; i++) { var student = students[i]; %>
        <tr>
            <td><%= student.rosterID %>
            <td><%= student.firstName %>
            <td><%= student.lastName %>
            <td><%= student.loginID %>
            <td><%= student.password %>
            <td><%= student.condition %>
        </tr>
        <% } %>
    </tbody>
</table>

<button id="confirm-button">Confirm new students</button>

