<div class="tabs">
    <ul>
        <li><a href="#student-login">Student</a>
        <li><a href="#instructor-login">Instructor</a>
    </ul>
    <div id="student-login">
        <form name="student" class="vertical">
            <label>
                Student ID
                <input type="text" name="loginID">
            </label>
            <label>
                Password
                <input type="password" name="password">
            </label>
            <input type="submit" value="Sign In">
        </form>
    </div>
    <div id="instructor-login">
        <form name="instructor" class="vertical">
            <label>
                Teacher ID
                <input type="text" name="loginID">
            </label>
            <label>
                Password
                <input type="password" name="password">
            </label>
            <label>
                Remember me
                <input type="checkbox" name="remember">
            </label>
            <input type="submit" value="Sign In">
        </form>
    </div>
</div>
